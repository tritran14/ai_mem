# Database Configuration
DB_HOST=localhost
DB_PORT=5440
DB_NAME=ai_mem
DB_USER=ai_mem_user
DB_PASSWORD=ai_mem_pass
DB_MIN_CONN=1
DB_MAX_CONN=5

# LLM Configuration
LLM_MODEL=llama3.2:latest
OLLAMA_HOST=http://localhost:11434

# Vector Store Configuration
VECTOR_COLLECTION=temp_memory

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=ai_mem.log
LOG_DIR=logs
EMPTY_FACTS_LOG_FILE=empty_facts.log

# Sentry Configuration
# Sentry will automatically check if the server is available before initializing
# If server is not reachable, the app will run without error tracking
SENTRY_DSN=http://YOUR_PUBLIC_KEY@localhost:9000/YOUR_PROJECT_ID
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0
